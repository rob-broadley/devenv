{
	"coc.preferences.promptInput": false,
	"coc.preferences.promptWorkspaceEdit": false,
	"diagnostic.checkCurrentLine": false,
	"diagnostic.floatConfig": {
	  "border": true
	},
	"hover.floatConfig": {
	  "border": true
	},
	"suggest.floatConfig": {
	  "border": true
	},
	"signature.floatConfig": {
	  "border": true
	},
	// Language Specific Settings
	"pydocstring.formatter": "google",
	"python.formatting.provider": "black",
	"python.linting.enabled": true,  // enable additional linters.
	"python.linting.lintOnSave": true,
	"python.linting.mypyEnabled": true,
	"python.linting.ruffEnabled": true,
	"python.linting.pydocstyleEnabled": true,
	"python.linting.pylintEnabled": true,
	"pyright.organizeimports.provider": "isort",
	"pyright.testing.provider": "pytest"
}
